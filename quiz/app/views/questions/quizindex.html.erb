<p id="notice"><%= notice %></p>

<% if $Iterator == $Length %>
  <p> Quiz is done </p>
  <%= link_to 'Quiz Page', subgenre_path(@subgenre.id) %>
<% else %>
<p>
  <strong>Question Type:</strong>
  <% if @question.qtype == 1 %>
    <strong> Single Correct Answer Type </strong>
  <% else %>
    <strong> Multi Correct Answer Type </strong>
  <% end %>
</p>

<p>
  <strong>Question : </strong><br/>
  <%= @question.qstring %><br/>
</p>

<%= render 'quizform', question: @question, options: @options, path: quiz_link_path %>

<p>
  <strong>Points For the Question: </strong>
  <%= @question.score %><br/>
</p>

<%= link_to 'Pause', subgenre_path(@subgenre.id) %>
<% end %>
