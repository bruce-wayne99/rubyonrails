<p id="notice"><%= notice %></p>

<h1>Leaderboards</h1>

<table>
  <thead>
    <tr>
      <th>Score</th>
      <th>User</th>
      <th>Genre</th>
      <th>Subgenre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leaderboards.each do |leaderboard| %>
      <tr>
        <td><%= leaderboard.score %></td>
        <td><%= leaderboard.user %></td>
        <td><%= leaderboard.genre %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('Back' , genre_path(params[:genre_id])) %>
