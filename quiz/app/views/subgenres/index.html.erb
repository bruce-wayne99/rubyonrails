<p id="notice"><%= notice %></p>

<h1>Subgenres</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>No of questions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subgenres.each do |subgenre| %>
      <tr>
        <td><%= subgenre.name %></td>
        <td><%= subgenre.no_of_questions %></td>
        <td><%= link_to 'Show', subgenre %></td>
        <% if session[:role] == 'user_admin' %>
          <td><%= link_to 'Edit', edit_subgenre_path(subgenre) %></td>
          <td><%= link_to 'Destroy', subgenre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>
<% if session[:role] == 'user_admin' %>
  <p><%= link_to('Leaderboard', leaderboards_subgenre_link_path(@genre.id)) %></p>
<% end %>
<% if session[:role] == 'user_admin' %>
  <%= link_to 'New Subgenre', new_subgenre_link_path %>
<% end %>
<br/>
<%= link_to 'back', genre_path(params[:genre_id]) %>
