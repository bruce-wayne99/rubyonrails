<!DOCTYPE html>
<html>
  <head>
    <title>Quiz</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to 'QUIZ', root_path, :class => "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav">
          <li class="active">
            <% if session['user_id'] %>
              <%= link_to 'Home', user_path(session['user_id']) %>
            <% else %>
              <%= link_to 'Register', new_user_path %>
            <% end %>
          </li>
          <% if session['user_id'] %>
            <li>
                <%= link_to 'Genres', genres_path %>
            </li>
            <li>
                <%= link_to 'Settings', update_credentials_path(session['user_id']) %>
            </li>
            <li>
                <%= link_to('Logout', logout_path ,method: :delete, data: { confirm: 'Are you sure?' }) %>
            </li>
          <% else %>
            <li>
                <%= link_to 'Login', login_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="container">

    </div>

    <%= yield %>
    </body>
</html>
