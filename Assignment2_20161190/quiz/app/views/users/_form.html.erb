<%= form_with(model: user, local: true, class: "form-group") do |form| %>
  <% if user.errors.any? %>
    <div  class="alert alert-danger">
      <h2><%= pluralize(user.errors.count, "error") %>
          prohibited this user from being saved:
      </h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, id: :user_name, class: "form-control", placeholder: "Enter Username" %>
  </div>
  <br/>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email, class: "form-control", placeholder: "Enter Email" %>
  </div>
  <br/>
  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password , class: "form-control", placeholder: "Enter password" %>
  </div>
  <br/>
  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation, class: "form-control", placeholder: "Enter password again" %>
    <br/>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-default" %>
  </div>
<% end %>
