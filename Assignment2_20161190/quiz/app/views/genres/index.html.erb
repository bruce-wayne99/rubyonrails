<p id="notice"><%= notice %></p>

<h1>Genres</h1>

<table class="table table-hover" style="width:50%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.description %></td>
        <td><%= link_to 'Show', genre %></td>
        <% if session[:role] == 'user_admin' %>
          <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
          <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if session[:role] == 'user_admin' %>
  <%= link_to 'New Genre', new_genre_path, class: "btn btn-info", role: "button" %>
<% end %>
<br/>
<br/>
<%= link_to 'Back', user_path(session['user_id']), class: "btn btn-success", role: "button" %>
