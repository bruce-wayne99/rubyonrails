<p id="notice"><%= notice %></p>
<table class="table table-hover" style="width:50%">
  <tr>
    <td>
    <strong>Score:</strong>
    </td>
    <td>
    <%= @leaderboard.score %>
    </td>
  </tr>

  <tr>
    <td>
    <strong>User:</strong>
    </td>
    <td>
    <%= @leaderboard.user.username %>
    </td>
  </tr>

  <tr>
    <td>
    <strong>Genre:</strong>
    </td>
    <td>
    <%= @leaderboard.genre.name %>
    </td>
  </tr>

  <tr>
    <td>
    <strong>Subgenre:</strong>
    </td>
    <td>
    <%= @leaderboard.subgenre.name %>
    </td>
  </tr>
</table>
<% if session[:role] == 'user_admin' %>
  <%= link_to 'Edit', edit_leaderboard_path(@leaderboard), class: "btn btn-info", role: "button"  %>
<% end %>
<br/><br/>
<%= link_to 'Back', leaderboards_subgenre_link_path(@leaderboard.subgenre_id), class: "btn btn-success", role: "button"  %>
