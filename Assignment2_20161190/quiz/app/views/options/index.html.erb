<p id="notice"><%= notice %></p>

<h1>Options</h1>

<table class="table table-hover" style="width:50%" >
  <thead>
    <tr>
      <th>Answer</th>
      <th>Isanswer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @options.each do |option| %>
      <tr>
        <td><%= option.answer %></td>
        <td>
          <% if option.isanswer == 1 %>
              True
            <% else %>
              False
            <% end %>
        </td>
        <td><%= link_to 'Show', option %></td>
        <td><%= link_to 'Edit', edit_option_path(option) %></td>
        <td><%= link_to 'Destroy', option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>
<% if session[:role] == 'user_admin' %>
  <%= link_to 'New Option', new_option_link_path, class: "btn btn-info", role: "button" %>
<% end %>
<br/><br/>
<%= link_to 'back', question_path(params[:question_id]), class: "btn btn-success", role: "button" %>
