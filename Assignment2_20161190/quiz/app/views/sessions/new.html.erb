<div>

<% if flash[:alert] %>
  <div id="notice" class="alert alert-danger"><%= flash[:alert] %> </div>
<% end %>
<%= form_tag('/login') do %>
<fieldset>
    <legend>Please Log In</legend>
    <div class="form-group">
    <%= label_tag :username, 'Username' %>
    <%= text_field_tag :username, params[:username], :class => "form-control", :placeholder => "Enter Username" %>
    <%= label_tag :password, 'Password' %>
    <%= password_field_tag :password, params[:password], :class => "form-control", :placeholder => "Enter Password" %>
    </div>

    <%= submit_tag "Login", :class => "btn btn-default" %>
</fieldset>
<% end %>

</div>
